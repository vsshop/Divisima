@inject IViewLocalizer Localizer

<!-- Product filter section -->
<section class="product-filter-section">
	<div class="container">
		<div class="section-title">
			<h2>@Localizer["TopSellingProducts"]</h2>
		</div>
		<ul class="product-filter-menu">
			<li><a href="#">TOPS</a></li>
			<li><a href="#">JUMPSUITS</a></li>
			<li><a href="#">LINGERIE</a></li>
			<li><a href="#">JEANS</a></li>
			<li><a href="#">DRESSES</a></li>
			<li><a href="#">COATS</a></li>
			<li><a href="#">JUMPERS</a></li>
			<li><a href="#">LEGGINGS</a></li>
		</ul>
		<div v-if="load" class="row">
			<div v-for="product in products"
				class="col-lg-3 col-sm-6">
				<div class="product-item">
					<div class="pi-pic">
						<a v-bind:href="product.id">
							<img v-bind:src="product.image" alt="">
							<div class="img-hover"></div>
						</a>
						<div class="pi-links">
							<a v-on:click="AddProduct(product)" class="add-card"><i class="fa-solid fa-bag-shopping"></i><span>ADD TO CART</span></a>
							<a href="#" class="wishlist-btn"><i class="fa-regular fa-heart"></i></a>
						</div>
					</div>
					<div class="pi-text">
						<h6>${{product.price}}</h6>
						<p>{{product.title}}</p>
					</div>
				</div>
			</div>
		</div>
		<div v-else class="compex-loader">loading</div>
		<div class="text-center pt-5">
			<button class="site-btn sb-line sb-dark">LOAD MORE</button>
		</div>
		<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
			<div id="liveToast" class="toast hide" role="alert" aria-live="assertive" aria-atomic="true" ref="toast">
				
				<div class="toast-header">
					<i class="fa-solid fa-bag-shopping rounded me-2"></i>
					<strong class="me-auto">Вітаємо!</strong>
					<small>1 секунду назад</small>
					<div type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></div>
				</div>
				<div class="toast-body">
					Товар {{product?.title}} успішно додано до корзини
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Product filter section end -->
